{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "..",
    "baseUrl": "..",
    "paths": {
      "@shared-types/*": ["types/*"]
    },
    "types": ["node"]
  },
  "include": ["./**/*.ts", "../types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
} 